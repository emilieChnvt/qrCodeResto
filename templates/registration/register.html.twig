{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-2xl shadow-md">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-4 p-4 text-red-800 bg-red-100 border border-red-300 rounded-lg">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold mb-6 text-center">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_row(registrationForm.email, {
                attr: { class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300' }
            }) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password',
                attr: { class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300' }
            }) }}
        </div>
        <div class="mb-6">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition duration-200">
            Register
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
