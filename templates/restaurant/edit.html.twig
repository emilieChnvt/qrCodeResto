{% extends 'base.html.twig' %}

{% block title %}Modifier {{ restaurant.name }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-amber-50 flex items-center justify-center py-12 px-6">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg border border-amber-300">
            <h1 class="text-3xl font-bold text-amber-900 mb-6 text-center">Modifier le nom et/ou l'Url</h1>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block mb-2 font-semibold text-gray-900'}}) }}
                {{ form_widget(form.name, {'attr': {
                    'class': 'w-full px-4 py-3 border border-amber-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition duration-300'
                }}) }}
                <div class="text-red-600 text-sm mt-1">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div>
                {{ form_label(form.url, null, {'label_attr': {'class': 'block mb-2 font-semibold text-gray-900'}}) }}
                {{ form_widget(form.url, {'attr': {
                    'class': 'w-full px-4 py-3 border border-amber-300 rounded-md focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition duration-300'
                }}) }}
                <div class="text-red-600 text-sm mt-1">
                    {{ form_errors(form.url) }}
                </div>
            </div>

            <div class="flex justify-between items-center space-x-4">
                <button type="submit"
                        class="w-full bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 rounded-md shadow-lg transition duration-300 ease-in-out">
                    Enregistrer
                </button>

                <a href="{{ path('app_admin', {id: app.user.id}) }}"
                   class="w-full text-center py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 transition duration-300">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
