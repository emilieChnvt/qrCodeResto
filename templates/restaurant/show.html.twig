{% extends 'base.html.twig' %}

{% block title %}Dashboard de {{ restaurant.name }}{% endblock %}

{% block body %}

    <div class="max-w-4xl mx-auto px-6 py-10 bg-gray-50 min-h-screen">
        <h1 class="text-4xl font-bold mb-8 text-gray-800">🍽️ {{ restaurant.name }}</h1>

        <div class="flex flex-wrap gap-4 mb-10">
            <a href="{{ path('app_admin', {id: app.user.id}) }}"
               class="bg-white border h-10  text-gray-700 hover:bg-gray-100 py-2 px-4 rounded-md shadow-sm flex items-center gap-2">
                ← Retour
            </a>

            <a href="{{ path('app_show_menu', {id: restaurant.id}) }}"
               class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md flex items-center gap-2  px-4 py-2 text-sm  h-10 ">
                📋 Voir le menu
            </a>

            <div class="relative">
                <button id="dropdownBtn" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md flex items-center gap-2">
                    🔗 QR Code
                </button>
                <div id="dropdownMenu" class="absolute hidden bg-white shadow-lg mt-2 rounded-md border w-64 z-10">
                    <a href="{{ path('app_qr_code', {id: restaurant.id, type: 'manual'}) }}"
                       class="block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100">🖋️ Menu écrit manuellement</a>
                    {% if restaurant.menuFileName %}
                        <a href="{{ path('app_qr_code', {id: restaurant.id, type: 'pdf'}) }}"
                           class="block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100">📄 Menu PDF uploadé</a>
                    {% endif %}
                </div>
            </div>





            <a href="{{ path('app_upload_menu', {id: restaurant.id}) }}"
               class="h-10  bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-4 rounded-md flex items-center gap-2">
                📁 Upload menu
                {% if restaurant.menuFileName %}
                    <span title="Menu déjà uploadé">✅</span>
                {% endif %}
            </a>
        </div>

        <div class="flex flex-col gap-3">
            {% for category in categories %}
                <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg border border-gray-200">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-lg font-semibold text-gray-800">{{ category.name }}</h2>
                        <a href="{{ path('app_menu_item_create', {id: category.id}) }}"
                           class="text-blue-500 text-sm hover:underline">+ Ajouter</a>
                    </div>

                    {% if category.menuItems|length == 0 %}
                        <p class="text-gray-400 italic">Aucun plat dans cette catégorie.</p>
                    {% else %}
                        <ul class="space-y-3">
                            {% for item in category.menuItems %}
                                <li class="bg-gray-50 p-3 rounded-lg border border-gray-100">
                                    <div class="flex justify-between items-center">
                                        <div class="flex items-center">
                                            <p class="text-gray-800 font-medium">{{ item.name }}
                                                {% if item.description %}
                                                 <span class="text-gray-400 text-xs"> - {{ item.description }}</span>
                                                {% endif %}
                                            </p>

                                        </div>
                                        <div class="text-right">
                                            <p class="text-gray-700 font-semibold">{{ item.price|number_format(2, '.', ' ') }} €</p>
                                            <a href="{{ path('app_delete_menu_item', {id: item.id}) }}"
                                               class="text-red-500 text-sm hover:underline">Supprimer</a>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('dropdownBtn');
            const menu = document.getElementById('dropdownMenu');

            btn.addEventListener('click', (e) => {
                e.stopPropagation(); // Empêche le clic de remonter et fermer directement
                menu.classList.toggle('hidden');
            });

            menu.addEventListener('click', (e) => {
                e.stopPropagation(); // Empêche le clic dans le menu de fermer le menu
            });

            document.addEventListener('click', () => {
                // clic en dehors du bouton et du menu => on ferme
                menu.classList.add('hidden');
            });
        });



    </script>
{% endblock %}
